<%= form_with( model: [ @article, @article.comments.build ], local: true) do |f| %>
  <div class="form-group">
    <%= f.label :author %>
    <%= f.text_field :author, class: "form-control" %>
  </div>
<div class="form-group">
  <%= f.label :body %>
  <%= f.text_area :body, class: "form-control" %>
</div>
  <%= f.submit class: "btn btn-primary" %>
<% end %>
